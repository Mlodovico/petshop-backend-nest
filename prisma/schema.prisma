generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admins {
  id             Int      @id @default(autoincrement())
  name           String
  email          String
  address        String
  clearanceLevel Int
  password       String
  createdAt      DateTime @default(now())
}

model Clients {
  id       Int    @id @default(autoincrement())
  name     String
  document String
  email    String
  address  String
  pet      Pet    @relation(fields: [petId], references: [id])

  createdAt DateTime @default(now())
  petId     Int
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  breed     String
  birthdata DateTime
  agr       Int
  weight    Int

  Clients Clients[]
}
